<div class="container mt-5">

  <h1><%= @cocktail.name %></h1>

    <% @cocktail.doses.each do |dose| %>
        <%= dose.description %>
        <%= dose.ingredient.name %>
    <% end %>


  <h2>Add a dose</h2>
 <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit "Cheers!" %>
  <% end %>

  <%= link_to "Back to list", cocktails_path %>
  <%= link_to "delete", cocktail_path(@cocktail),
  method: :delete,
            data: { confirm: "Are you sure that you want to delete it ?" } %>

</div>
